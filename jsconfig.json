{
    // 请访问 https://go.microsoft.com/fwlink/?LinkId=759670
    // 参阅有关 jsconfig.json 格式的文档
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "./",
        "paths": {
            "@components/*": ["src/components/*"],
            "@stylsheet/*": ["src/stylsheet/*"],
            "@assets/*": ["src/assets/*"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"],
            "@mixins/*": ["src/mixins/*"],
        }
    },
    "exclude": [
        "dist",
        "public",
        "node_modules",
    ],
    "include": [
        "src/**/*"
    ]
}
